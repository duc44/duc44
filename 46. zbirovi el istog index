niz1=[1,0,2,3,4]
niz2=[3,5,6,7,8,13]
if(niz1.length>niz2.length){
    while(niz1.length!==niz2.length){
        niz2.push(0)
    }
}
else if(niz2.length>niz1.length){
    while(niz1.length!==niz2.length){
        niz1.push(0)
    }
}
niz3=niz2.map((el,index)=>{
    return el+niz1[index]
})
console.log(niz3)
